CC = clang
NAME = libftprintf.a
PATHLIB = ./libft/
PATHSRC = ./srcs/
PATHOBJ = ./obj/
NAMELIB = libft.a
FLAG = -Wall -Wextra -Werror
SRCLIST = ft_printf.c
SRC = $(foreach dir, $(PATHSRC), $(SRCLIST))
INC = -I includes/ -I libft/
OBJ = $(subst $(SRC), $(PATHOBJ), $(SRC:.c=.o))

all: $(NAME)

$(NAME): lib $(OBJ)
	$(CC) $(FLAG) $(OBJ) $(INC) -L$(PATHLIB) -lft

lib:
	$(MAKE) -C$(PATHLIB)
	cp libft/libft.a libft.a

$(1)/%.o: %.c
	$(CC) -c $(FLAG) $< $(INC) -o $(PATHOBJ)$@

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all


#ar rcs $(NAME) $(OBJ) $(NAMELIB)
